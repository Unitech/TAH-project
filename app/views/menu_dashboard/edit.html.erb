
<section>
  <div class="page-header">
    <h1>
      <%= t('menu_dashboard.edit.title') %> : <%= @menu.title %>
    </h1>
  </div>

<ul class="breadcrumb">
  <li>
    <a href="<%= table_dashboard_manage_path %>">Table : <%= @table.title %></a> <span class="divider">/</span>
  </li>
  <li>
    <%= link_to "Menus : #{@menu.title}", table_dashboard_menu_index_path %> <span class="divider">/</span>
  </li>
  <li class="active">
    Plat
  </li>
</ul>


  <div class="row">

    <div class="span4">
      <h2>Edit menu</h2>
      <%= semantic_form_for @menu, :url => table_dashboard_menu_update_path do |f| %>
	<%= f.inputs :title, :price, :participation_cooking, :description %>
	
      <%= f.buttons do %>
	<%= f.commit_button %>
      <% end %>

      <% end %>
    </div>
    
    <div class="span6">
      <h2>Dishes list</h2>

	<div class="well">
	  <!-- Warning dish-list must stay arround the list of menus -->
	  <ul class="nav nav-list">
	    <% @menu.dishes.each do |dish| %>
	      <li><%= dish.title %></li>
	    <% end %>
	  </ul>
	</div>

	<div class="add-dish well">
	  <h3>Add dish</h3>
	  <br/>
	  <%= semantic_form_for :dish, :url => table_dashboard_menu_dish_create_path do |f| %>
	    <%= f.inputs :title, :description, :position %>
	    
	    <%= f.buttons do %>
	      <%= f.commit_button t('menu_dashboard.edit.add_dish') %>
	    <% end %>

	  <% end %>
	  
	  
	</div>
      
      
    </div>

  </div>
</section>

